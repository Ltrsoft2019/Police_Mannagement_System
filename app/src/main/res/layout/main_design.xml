<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewpiechart"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">


        <!-- and details of pie chart-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:weightSum="2">

            <!--Pie chart to display the data-->

            <org.eazegraph.lib.charts.PieChart
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/piechart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:padding="6dp"
                 android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"

                />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:textAlignment="center"
               android:textSize="16dp"
               android:paddingTop="10dp"
               android:text="Total Cases : "
               android:id="@+id/Total_cases"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_below="@id/cardviewpiechart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/piechartitem"
            android:orientation="vertical">

        </LinearLayout>


    <!-- Use of programming languages -->
        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            android:id="@+id/linecard"
            android:layout_below="@+id/piechartitem"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="-16dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                   android:id="@+id/response_time"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Response Time:"
                    />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/linechart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
         <TextView
             android:layout_below="@+id/linecard"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:text="Districts"
             android:id="@+id/ditrictheading"
             android:gravity="center"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/district_recycler"
            android:layout_below="@+id/ditrictheading"/>
    </RelativeLayout>
</ScrollView>
