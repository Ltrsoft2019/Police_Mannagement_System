<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Add User Detail"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Complaint Subject :"
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/subject"
                android:background="@drawable/formborder"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="40dp"
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                />
            <ImageView
                android:id="@+id/mike_img1"
                android:paddingLeft="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/mic2"
                android:layout_height="45dp"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Complaint Description :"
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:background="@drawable/formborder"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="40dp"
                android:padding="4dp"
                android:id="@+id/desc"
                android:layout_marginLeft="5dp"
                />
            <ImageView
                android:id="@+id/mike_img2"
                android:paddingLeft="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/mic2"
                android:layout_height="45dp"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Complaint Against :"
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:background="@drawable/formborder"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="40dp"
                android:padding="4dp"
                android:id="@+id/against"
                android:layout_marginLeft="5dp"
                />
            <ImageView
                android:id="@+id/mike_img3"
                android:paddingLeft="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/mic2"
                android:layout_height="45dp"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Select Gender : "
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Select ComplaintType : "
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/cmp_type"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/formborder"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Select Complaint Sub-Type : "
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/cmpSubt"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"

                android:background="@drawable/formborder"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Incident Location : "
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/complaint_date"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:text="choose the date"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="@drawable/datepicker"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Incident Location Through GPS: "
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@+id/location"
                android:text="Location"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="@drawable/datepicker"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:gravity="center"
            android:text=" Select The Image : "
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"
            />
        <ImageView
            android:id="@+id/camera_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:src="@drawable/cam2"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/camera_tv"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="CAMERA"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/datepicker"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:gravity="start"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/gallery_tv"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="GALLERY"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/datepicker"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/submit"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Submit"
                android:gravity="center"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

</ScrollView>