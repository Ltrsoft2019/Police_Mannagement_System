<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Add Criminal"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Enter Criminal Full Name :"
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/criminalfullname"
                android:background="@drawable/formborder"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="40dp"
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                />
            <ImageView
                android:id="@+id/mike_img1"
                android:paddingLeft="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/mic2"
                android:layout_height="45dp"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text=" Date Of Birth : "
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dob_date"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="choose the date"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="@drawable/datepicker"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Select Gender : "
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioGroup
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="40dp"
                android:background="@drawable/formborder"
                android:id="@+id/gendergroup"
                android:orientation="horizontal"

                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:id="@+id/male"
                    android:layout_marginLeft="2dp"
                    android:padding="2dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:id="@+id/female"
                    android:layout_marginLeft="2dp"
                    android:padding="2dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:id="@+id/other"
                    android:layout_marginLeft="2dp"
                    android:padding="2dp"/>
            </RadioGroup>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Race and Ethnicity :"
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:background="@drawable/formborder"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="40dp"
                android:padding="4dp"
                android:id="@+id/raceandethnicity"
                android:layout_marginLeft="5dp"
                />
            <ImageView
                android:id="@+id/mike_img2"
                android:paddingLeft="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/mic2"
                android:layout_height="45dp"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Social Security Number :"
            android:layout_marginLeft="5dp"
