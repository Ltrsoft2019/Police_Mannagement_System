<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Add User Detail"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Enter User First Name :"
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/userfname"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="8"
                android:background="@drawable/formborder"
                android:padding="4dp" />
            <ImageView
                android:id="@+id/mike_img1"
                android:paddingLeft="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/mic2"
                android:layout_height="45dp"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Enter User Last Name :"
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:background="@drawable/formborder"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="40dp"
                android:padding="4dp"
                android:id="@+id/unsermname"
                android:layout_marginLeft="5dp"
                 />
            <ImageView
                android:id="@+id/mike_img2"
                android:paddingLeft="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/mic2"
                android:layout_height="45dp"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Enter User Middle Name :"
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:background="@drawable/formborder"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="40dp"
                android:padding="4dp"
                android:id="@+id/userlname"
                android:layout_marginLeft="5dp"
                />
            <ImageView
                android:id="@+id/mike_img3"
                android:paddingLeft="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/mic2"
                android:layout_height="45dp"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Select Gender : "
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="40dp"
            android:background="@drawable/formborder"
             android:id="@+id/gendergroup"
            android:orientation="horizontal"

            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:id="@+id/male"
                android:layout_marginLeft="2dp"
                android:padding="2dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:id="@+id/female"
                android:layout_marginLeft="2dp"
                android:padding="2dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:id="@+id/other"
                android:layout_marginLeft="2dp"
                android:padding="2dp"/>
        </RadioGroup>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Select Country : "
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Spinner
            android:id="@+id/country"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"


            android:background="@drawable/formborder"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Select State : "
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/states"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"

                android:background="@drawable/formborder"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text=" Date Of Birth : "
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dob_date"
                 android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"

                android:text="choose the date"
                 android:textSize="18dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                   android:background="@drawable/datepicker"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text=" Choose The Location: "
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"
            />
<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal">-->
<!--            <TextView-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_weight="9"-->
<!--                android:layout_height="40dp"-->
<!--                android:gravity="center"-->
<!--                android:text="Location"-->
<!--                android:textSize="18dp"-->
<!--                android:layout_marginLeft="5dp"-->
<!--                android:textStyle="bold"-->
<!--                android:layout_gravity="center"-->
<!--                android:background="@drawable/datepicker"/>-->
<!--            <View-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="1"/>-->

<!--        </LinearLayout>-->
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
             android:gravity="center"
             android:text=" Select The Image : "
            android:layout_marginLeft="5dp"
            android:paddingLeft="2dp"
            />
        <ImageView
            android:id="@+id/camera_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:src="@drawable/cam2"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/camera_tv"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="CAMERA"
                    android:gravity="center"
                    android:layout_gravity="center"
                     android:background="@drawable/datepicker"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:gravity="start"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/gallery_tv"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="GALLERY"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/datepicker"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/next_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Next"
                android:gravity="center"
                android:layout_gravity="center"
              />
        </LinearLayout>
    </LinearLayout>

</ScrollView>