<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.Add_Investigation">
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Add Investigation"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Complaint Id :"
        android:layout_marginLeft="5dp"
        android:paddingLeft="2dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/complaint_id"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="8"
            android:background="@drawable/formborder"
            android:padding="4dp" />
        <ImageView
            android:id="@+id/mike_img1"
            android:paddingLeft="4dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/mic2"
            android:layout_height="45dp"/>

    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text=" Investigation Start Date : "
        android:layout_marginLeft="5dp"
        android:paddingLeft="2dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/investigation_start"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"

            android:text="choose the date"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:background="@drawable/datepicker"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text=" Investigation End Date : "
        android:layout_marginLeft="5dp"
        android:paddingLeft="2dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/investigation_end_date"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"

            android:text="choose the date"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:background="@drawable/datepicker"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text=" Choose The Location: "
        android:layout_marginLeft="5dp"
        android:paddingLeft="2dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Location"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"

            android:textStyle="bold"
            android:layout_gravity="center"
            android:background="@drawable/datepicker"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Incident Reporting :"
        android:layout_marginLeft="5dp"
        android:paddingLeft="2dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/incidant_reporting"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="8"
            android:background="@drawable/formborder"
            android:padding="4dp" />
        <ImageView
            android:id="@+id/mike_img2"
            android:paddingLeft="4dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/mic2"
            android:layout_height="45dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Evidance Property :"
        android:layout_marginLeft="5dp"
        android:paddingLeft="2dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/evidance_property"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="8"
            android:background="@drawable/formborder"
            android:padding="4dp" />
        <ImageView
            android:id="@+id/mike_img3"
            android:paddingLeft="4dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/mic2"
            android:layout_height="45dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Investigation Description :"
        android:layout_marginLeft="5dp"
        android:paddingLeft="2dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/investigation_description"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="8"
            android:background="@drawable/formborder"
            android:padding="4dp" />
        <ImageView
            android:id="@+id/mike_img4"
            android:paddingLeft="4dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/mic2"
            android:layout_height="45dp"/>

    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_marginLeft="5dp"

        android:id="@+id/suspect_card"
        android:layout_height="wrap_content"
        android:layout_weight="8">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Suspect Details"
            android:background="@drawable/formborder"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/Suspect_View"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="end|center_vertical"
            app:srcCompat="@drawable/down_arrow" />
        <ImageView
            android:id="@+id/Suspect_plus"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="60dp"
            app:srcCompat="@drawable/add" />
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/suspect_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                 android:layout_below="@+id/victim_card" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_marginLeft="5dp"

                    android:id="@+id/victim_card"
                    android:layout_height="wrap_content"
                    android:layout_weight="8">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Victim Details"
                        android:background="@drawable/formborder"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/Victim_view"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="end|center_vertical"
                        app:srcCompat="@drawable/down_arrow" />
                    <ImageView
                        android:id="@+id/Victim_plus"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginRight="60dp"
                        app:srcCompat="@drawable/add" />
                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Victim_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/victim_card" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_marginLeft="5dp"

                    android:layout_height="wrap_content"
                    android:id="@+id/witness_card"
                    android:layout_weight="8">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Witness Details"
                        android:background="@drawable/formborder"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/Witness_View"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="end|center_vertical"
                        app:srcCompat="@drawable/down_arrow" />
                    <ImageView
                        android:id="@+id/Witness_plus"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginRight="60dp"
                        app:srcCompat="@drawable/add" />
                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Witness_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/victim_card" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="5dp"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/evidence_card"
                    android:layout_weight="8">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Evidance Details"
                        android:background="@drawable/formborder"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/Evidance_View"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="end|center_vertical"
                        app:srcCompat="@drawable/down_arrow" />
                    <ImageView
                        android:id="@+id/Evidance_plus"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginRight="60dp"
                        app:srcCompat="@drawable/add" />
                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Evidance_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/victim_card" />
        </LinearLayout>
        <Button
            android:layout_marginVertical="15dp"
            android:id="@+id/next_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Close"
            android:gravity="center"
            android:layout_gravity="center"
            />

    </LinearLayout>
</ScrollView>