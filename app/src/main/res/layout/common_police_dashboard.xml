<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            tools:ignore="VisualLintBounds">

            <!-- first  dashboard -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="411dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_margin="20dp"
                        android:text="Law And Order"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="220dp"
                        android:layout_gravity="center|top"
                        android:layout_margin="60dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/stationbargrapf" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/total_complaint"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="bottom|start"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="130dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="total registerd \n complaint \n100"
                            android:textSize="14sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="bottom|start"
                            android:layout_margin="10dp"
                            android:backgroundTint="#EA0075" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/solved_complaint"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="130dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/total_solved_n_complaint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="total_solved \n complaint \n 200"
                            android:textSize="14sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="bottom|start"
                            android:layout_margin="10dp"
                            android:backgroundTint="#00B2E2" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/fir"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="bottom|start"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/total_fir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="total_fir \n 150"
                            android:textSize="14sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="bottom|start"
                            android:layout_margin="10dp"
                            android:backgroundTint="#B3DD31" />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/investigation"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/total_investigation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="total ongoing \n investigation \n 100"
                            android:textSize="14sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="bottom|start"
                            android:layout_margin="10dp"
                            android:backgroundTint="#FFF424" />

                    </androidx.cardview.widget.CardView>


                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- second dashboard -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="411dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.8">

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_margin="20dp"
                        android:text="Average"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center|top"
                        android:layout_margin="60dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/respone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_margin="20dp"
                        android:text="@string/responce_time"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|start"
                        android:layout_margin="140dp"
                        android:backgroundTint="#0170C1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:layout_margin="60dp"
                        android:text="@string/clearance_time"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="23dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center|end"
                        android:layout_margin="30dp"
                        android:backgroundTint="#012060" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/responce_average"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="bottom|start"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="130dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/total_responce_average"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="responce_averahe \n \n 40 days"
                            android:textSize="14sp" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/case_clearance_average"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="130dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp"
                        tools:ignore="TextSizeCheck">

                        <TextView
                            android:id="@+id/total_case_clearance_average"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="case clearance \n average \n 20 days"
                            android:textSize="14sp" />


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/responce_average_police"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="bottom|start"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp"
                        tools:ignore="TextSizeCheck">

                        <TextView
                            android:id="@+id/total_responce_average_police"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="@string/responce_average_n_n_police_wise"
                            android:textSize="14sp" />


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/case_clearance_average_police"                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="@string/case_clearnce_n_average_n_police_wise"
                            android:textSize="14sp" />


                    </androidx.cardview.widget.CardView>


                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- third dashboard -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="411dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.8">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_margin="20dp"
                        android:text=" Law And Order"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/criminal"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_gravity="top|center"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="80dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/total_criminal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="Total Criminal \n 10"
                            android:textSize="14sp" />

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="10dp"
                            android:src="@drawable/criminal" />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/warrent"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_gravity="top|center"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="50dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/total_warrent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="Total Warrent \n 20"
                            android:textSize="14sp" />

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="10dp"
                            android:src="@drawable/warrant" />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/suspect"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_gravity="top|center"
                        android:layout_marginTop="140dp"
                        android:layout_marginEnd="80dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp"
                        tools:ignore="TextSizeCheck">

                        <TextView
                            android:id="@+id/total_suspect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="Total Suspect \n 30"
                            android:textSize="14sp" />

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="10dp"
                            android:src="@drawable/suspect" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/witness"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_gravity="top|center"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="140dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp"
                        tools:ignore="TextSizeCheck">

                        <TextView
                            android:id="@+id/total_witness"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="Total Witness \n 15"
                            android:textSize="14sp" />

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="10dp"
                            android:src="@drawable/witness" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/victim"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="232dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/total_victim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="Total Victim \n 12"
                            android:textSize="14sp" />


                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="10dp"
                            android:src="@drawable/target" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/evidance"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="190dp"
                        android:layout_marginTop="232dp"                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/totalevidance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="Total Evidance \n 32"
                            android:textSize="14sp" />

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="10dp"
                            android:src="@drawable/evidence" />


                    </androidx.cardview.widget.CardView>


                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Fourth dashboard -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="411dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.8">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_margin="20dp"
                        android:text=" Other"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/upcoming_event"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_gravity="top|center"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="80dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/total_upcoming_event"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="Upcoming Event"
                            android:textSize="14sp" />


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/Duty"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_gravity="top|center"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="50dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/DutySchedule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="Duty Schedule"
                            android:textSize="14sp" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/News"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_gravity="top|center"
                        android:layout_marginTop="140dp"
                        android:layout_marginEnd="80dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp"
                        tools:ignore="TextSizeCheck">

                        <TextView
                            android:id="@+id/total_News"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="News"
                            android:textSize="14sp" />


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/notification"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_gravity="top|center"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="140dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp"
                        tools:ignore="TextSizeCheck">

                        <TextView
                            android:id="@+id/total_notificatios"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="Notifications"
                            android:textSize="14sp" />


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/police_transfer"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="232dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/total_police_transfer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="10dp"
                            android:text="Transfer"
                            android:textSize="14sp" />



                    </androidx.cardview.widget.CardView>





                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>

    </HorizontalScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
